{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Spell.schema.json",
  "title": "Spell",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "spellcasting": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["fix", "choice"]
        },
        "values": {
          "type": "array",
          "item": {
            "type": "string"
          }
        },
        "value": {
          "type": "string"
        },
        "atlevel": {
          "type": "integer"
        }
      },
      "additionalProperties": false

    }
  },
  "required": ["name", "spellcasting"]
}