{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Spell.schema.json",
  "title": "Spell",
  "type": "object",
  "properties": {
    "class": {
      "type": "array",
      "item": {
        "enum": ["artificer", "bard", "cleric", "sorcerer", "druid", "investigator", "warmage", "wizard", "martyr", "necromancer", "warlock", "paladin", "ranger", "witch"]
      }
    },
    "choices": {
      "type": "array",
      "item": {
        "type": "string"
      }
    },
    "spellcasting": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["fix", "choice"]
        },
        "values": {
          "type": "array",
          "item": {
            "type": "string"
          }
        },
        "value": {
          "type": "string"
        },
        "atlevel": {
          "type": "integer"
        }
      },
      "additionalProperties": false

    }
  },
  "required": ["spellcasting"]
}